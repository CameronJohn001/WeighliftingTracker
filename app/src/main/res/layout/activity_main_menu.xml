<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cameron.weighliftingtracker.MainMenu">

    <Button
        android:text="track previous lift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_tracker"
        android:layout_marginBottom="73dp"
        android:layout_above="@+id/btn_maps"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add a new lift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_newlift"
        android:layout_marginBottom="85dp"
        android:layout_above="@+id/btn_tracker"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="62dp"
        android:text="Lift Locations" />
</RelativeLayout>
